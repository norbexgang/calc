<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Modern Light Theme - Fresh & Clean -->
    
    <!-- Háttér - Világos gradiens -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFF8F9FA" Offset="0.0"/>
        <GradientStop Color="#FFECEFF1" Offset="0.5"/>
        <GradientStop Color="#FFF8F9FA" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display háttér - Fehér gradiens -->
    <LinearGradientBrush x:Key="BorderBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
        <GradientStop Color="#FFF5F7FA" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display szöveg - Sötét szín -->
    <SolidColorBrush x:Key="BorderForegroundBrush" Color="#FF1A202C" />
    
    <!-- Gomb háttér - Világos szürke gradiens -->
    <!-- Slightly cheaper gradient rendering -->
    <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFE2E8F0" Offset="0.0"/>
        <GradientStop Color="#FFCBD5E0" Offset="1.0"/>
    </LinearGradientBrush>

    
    <!-- Gomb szöveg - Sötét szín -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FF2D3748" />
    
    <!-- Egyenlőség gomb - Élénk kék-zöld gradiens -->
    <LinearGradientBrush x:Key="AccentButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF3B82F6" Offset="0.0"/>
        <GradientStop Color="#FF06B6D4" Offset="0.5"/>
        <GradientStop Color="#FF10B981" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Hover effect színek -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FFA0AEC0" />
    
    <!-- Border árnyék -->
    <Color x:Key="GlowColor">#FF3B82F6</Color>
</ResourceDictionary>
