<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Experimental Dark Theme - Neon & Rounded -->
    
    <!-- Háttér - Deep Cyber Blue -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF050510" Offset="0.0"/>
        <GradientStop Color="#FF101025" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display háttér - Glassy Dark -->
    <LinearGradientBrush x:Key="BorderBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#CC1A1A2E" Offset="0.0"/>
        <GradientStop Color="#9916213E" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display szöveg - Neon Cyan -->
    <SolidColorBrush x:Key="BorderForegroundBrush" Color="#FF00E5FF" />
    
    <!-- Gomb háttér - Dark Violet Gradient -->
    <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF2D1B4E" Offset="0.0"/>
        <GradientStop Color="#FF1A102E" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Gomb szöveg - Neon Pink -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFF4081" />
    
    <!-- Egyenlőség gomb - Neon Orange/Yellow -->
    <LinearGradientBrush x:Key="AccentButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFF9100" Offset="0.0"/>
        <GradientStop Color="#FFFFEA00" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Hover effect színek -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FF4527A0" />
    
    <!-- Border árnyék -->
    <Color x:Key="GlowColor">#FF00E5FF</Color>

    <!-- Experimental Button Style Override -->
    <Style TargetType="Button">
        <Setter Property="Margin" Value="6" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FF651FFF" Opacity="0.5" BlurRadius="15" ShadowDepth="0" Direction="0" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Fully Rounded / Pill Shape -->
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="25"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        <Border x:Name="HighlightBorder" CornerRadius="25" Background="White" Opacity="0" IsHitTestVisible="False" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="1.0" />
                            <Setter TargetName="HighlightBorder" Property="Opacity" Value="0.15" />
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#FF00E5FF" Opacity="0.8" BlurRadius="20" ShadowDepth="0" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8" />
                            <Setter TargetName="HighlightBorder" Property="Opacity" Value="0.25" />
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95" CenterX="35" CenterY="35"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
