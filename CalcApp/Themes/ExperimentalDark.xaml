<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Experimental Dark Theme - Premium Glassmorphism -->
    
    <!-- Background - Deep Midnight Gradient -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF0F172A" Offset="0.0"/> <!-- Slate 900 -->
        <GradientStop Color="#FF1E1B4B" Offset="1.0"/> <!-- Indigo 950 -->
    </LinearGradientBrush>
    
    <!-- Display Background - Glassy Surface -->
    <LinearGradientBrush x:Key="BorderBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#10FFFFFF" Offset="0.0"/>
        <GradientStop Color="#05FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display Text - Neon Cyan -->
    <SolidColorBrush x:Key="BorderForegroundBrush" Color="#FF22D3EE" /> <!-- Cyan 400 -->
    
    <!-- Button Background - Frosted Glass (More Transparent) -->
    <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#15FFFFFF" Offset="0.0"/>
        <GradientStop Color="#05FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Button Text - Soft White -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#F0F9FF" /> <!-- Sky 50 -->
    
    <!-- Accent Button (Equals) - Vibrant Gradient -->
    <LinearGradientBrush x:Key="AccentButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#CC6366F1" Offset="0.0"/> <!-- Indigo 500 (80%) -->
        <GradientStop Color="#CCEC4899" Offset="1.0"/> <!-- Pink 500 (80%) -->
    </LinearGradientBrush>
    
    <!-- Hover Effect Color -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#25FFFFFF" />
    
    <!-- Glow/Shadow Color -->
    <Color x:Key="GlowColor">#806366F1</Color>

    <!-- Experimental Button Style Override -->
    <Style TargetType="Button">
        <Setter Property="Margin" Value="6" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#40FFFFFF" Offset="0"/>
                    <GradientStop Color="#10FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Glassy Pill Shape -->
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="24"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="15" ShadowDepth="5" Direction="270" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        
                        <!-- Inner Shine/Highlight (Stronger) -->
                        <Border x:Name="ShineBorder" CornerRadius="24" IsHitTestVisible="False" Opacity="0.1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#60FFFFFF" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="0.5"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource ButtonHoverBrush}" />
                            <Setter TargetName="ShineBorder" Property="Opacity" Value="0.3" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8" />
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.96" ScaleY="0.96" CenterX="35" CenterY="35"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
