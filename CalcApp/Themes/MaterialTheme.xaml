<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#FF0B0B15" Offset="0.0"/>
        <GradientStop Color="#FF161425" Offset="0.6"/>
        <GradientStop Color="#FF0F0B1E" Offset="1.0"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BorderBackgroundBrush" StartPoint="0,0" EndPoint="0,1" po:Freeze="True">
        <GradientStop Color="#1AFFFFFF" Offset="0.0"/>
        <GradientStop Color="#05FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="BorderForegroundBrush" Color="#FF00F0FF" po:Freeze="True" />
    
    <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0,0" EndPoint="0,1" po:Freeze="True">
        <GradientStop Color="#26FFFFFF" Offset="0.0"/>
        <GradientStop Color="#0DFFFFFF" Offset="1.0"/>
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFFFF" po:Freeze="True" />
    
    <LinearGradientBrush x:Key="AccentButtonBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#FFD500F9" Offset="0.0"/>
        <GradientStop Color="#FF651FFF" Offset="1.0"/>
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#33FFFFFF" po:Freeze="True" />
    
    <Color x:Key="GlowColor" po:Freeze="True">#FFD500F9</Color>
    <SolidColorBrush x:Key="GlowBrush" Color="{StaticResource GlowColor}" po:Freeze="True" />
    
    <DropShadowEffect x:Key="NeonTextEffectDefault" Color="#FF00F0FF" BlurRadius="8" ShadowDepth="0" Opacity="0.8" RenderingBias="Performance" po:Freeze="True"/>
    <DropShadowEffect x:Key="NeonBorderEffectDefault" Color="#FFD500F9" BlurRadius="15" ShadowDepth="0" Opacity="0.5" RenderingBias="Performance" po:Freeze="True"/>

    <DropShadowEffect x:Key="NeonTextEffect" Color="#FF00F0FF" BlurRadius="8" ShadowDepth="0" Opacity="0.8" RenderingBias="Performance" po:Freeze="True"/>
    <DropShadowEffect x:Key="NeonBorderEffect" Color="#FFD500F9" BlurRadius="15" ShadowDepth="0" Opacity="0.5" RenderingBias="Performance" po:Freeze="True"/>
</ResourceDictionary>