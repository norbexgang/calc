<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <!-- Modern Dark Theme - Gradient Enhanced -->
    
    <!-- Háttér - Mély sötétkék gradiens -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#FF0F0E17" Offset="0.0"/>
        <GradientStop Color="#FF1A1825" Offset="0.5"/>
        <GradientStop Color="#FF0F0E17" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display háttér - Élénk sötét gradiens -->
    <LinearGradientBrush x:Key="BorderBackgroundBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#FF1E1B2E" Offset="0.0"/>
        <GradientStop Color="#FF2A2640" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display szöveg - Világos cián árnyalat -->
    <SolidColorBrush x:Key="BorderForegroundBrush" Color="#FFE0F7FF" po:Freeze="True" />
    
    <!-- Gomb háttér - Modern sötét purple gradiens -->
    <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#FF2D2A3F" Offset="0.0"/>
        <GradientStop Color="#FF3A3551" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Gomb szöveg - Világos szín -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFF0F0F5" po:Freeze="True" />
    
    <!-- Egyenlőség gomb - Élénk lila-kék gradiens -->
    <LinearGradientBrush x:Key="AccentButtonBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#FF8B5CF6" Offset="0.0"/>
        <GradientStop Color="#FF6366F1" Offset="0.5"/>
        <GradientStop Color="#FF3B82F6" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Hover effect színek -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FF4A4560" po:Freeze="True" />
    
    <!-- Border árnyék -->
    <Color x:Key="GlowColor" po:Freeze="True">#FF6366F1</Color>
</ResourceDictionary>
