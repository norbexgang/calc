<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <!--
        Experimental neon/glass theme for the calculator.

        This dictionary overrides the same keys defined in
        MaterialTheme.xaml with brighter colours and semi‑transparent
        brushes to create a frosted glass look.  When this dictionary
        is merged into the application's resources at runtime the
        existing keys are replaced, giving the UI a more luminous
        appearance without changing any of the underlying control
        templates.

        The colours were chosen to preserve the overall neon aesthetic
        while offering a clearer contrast against the content of the
        calculator display and buttons.  Feel free to tweak the
        gradient stops or opacity values further to taste.
    -->

    <!-- Window background: a semi‑transparent white gradient for a glass effect -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#40FFFFFF" Offset="0.0" />
        <GradientStop Color="#20FFFFFF" Offset="0.6" />
        <GradientStop Color="#10FFFFFF" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Panel and memory area background: slightly more opaque than the window -->
    <LinearGradientBrush x:Key="BorderBackgroundBrush" StartPoint="0,0" EndPoint="0,1" po:Freeze="True">
        <GradientStop Color="#66FFFFFF" Offset="0.0" />
        <GradientStop Color="#33FFFFFF" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Foreground for borders and labels: neon cyan -->
    <SolidColorBrush x:Key="BorderForegroundBrush" Color="#FF00FFFF" po:Freeze="True" />

    <!-- Button backgrounds: subtle frosted look with white tint -->
    <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0,0" EndPoint="0,1" po:Freeze="True">
        <GradientStop Color="#55FFFFFF" Offset="0.0" />
        <GradientStop Color="#25FFFFFF" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Text colour on buttons -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFFFF" po:Freeze="True" />

    <!-- Accent button gradient: vibrant turquoise and blue -->
    <LinearGradientBrush x:Key="AccentButtonBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#FF00E5FF" Offset="0.0" />
        <GradientStop Color="#FF0099FF" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Hover brush for buttons: translucent white glow -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#4DFFFFFF" po:Freeze="True" />

    <!-- Glow colour used for neon effects -->
    <Color x:Key="GlowColor" po:Freeze="True">#FF00FFFF</Color>
    <SolidColorBrush x:Key="GlowBrush" Color="{StaticResource GlowColor}" po:Freeze="True" />

    <!-- Neon drop shadow presets for the text and border glow -->
    <DropShadowEffect x:Key="NeonTextEffectDefault" Color="#FF00FFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.8" RenderingBias="Performance" po:Freeze="True" />
    <DropShadowEffect x:Key="NeonBorderEffectDefault" Color="#FF00E5FF" BlurRadius="15" ShadowDepth="0" Opacity="0.5" RenderingBias="Performance" po:Freeze="True" />

    <!-- Reusable neon drop shadow references consumed by the UI -->
    <DropShadowEffect x:Key="NeonTextEffect" Color="#FF00FFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.8" RenderingBias="Performance" po:Freeze="True" />
    <DropShadowEffect x:Key="NeonBorderEffect" Color="#FF00E5FF" BlurRadius="15" ShadowDepth="0" Opacity="0.5" RenderingBias="Performance" po:Freeze="True" />

    <DropShadowEffect x:Key="WindowShadowEffect" Color="#FF000000" BlurRadius="8" ShadowDepth="3" Direction="270" Opacity="0.35" RenderingBias="Performance" po:Freeze="True" />

</ResourceDictionary>
