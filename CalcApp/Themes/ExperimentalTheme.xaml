<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    <!--
        Experimental neon/glass theme for the calculator.

        This dictionary overrides the same keys defined in
        MaterialTheme.xaml with brighter colours and semi‑transparent
        brushes to create a frosted glass look.  When this dictionary
        is merged into the application's resources at runtime the
        existing keys are replaced, giving the UI a more luminous
        appearance without changing any of the underlying control
        templates.

        The colours were chosen to preserve the overall neon aesthetic
        while offering a clearer contrast against the content of the
        calculator display and buttons.  Feel free to tweak the
        gradient stops or opacity values further to taste.
    -->

    <!-- Window background: deeper aurora‑like gradient for a richer, polished look -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#FF0A0F1E" Offset="0.0" />
        <GradientStop Color="#FF161B2F" Offset="0.55" />
        <GradientStop Color="#FF0B0F24" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Panel and memory area background: refined glass with better contrast -->
    <LinearGradientBrush x:Key="BorderBackgroundBrush" StartPoint="0,0" EndPoint="0,1" po:Freeze="True">
        <GradientStop Color="#26FFFFFF" Offset="0.0" />
        <GradientStop Color="#12FFFFFF" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Foreground for borders and labels: soft neon cyan -->
    <SolidColorBrush x:Key="BorderForegroundBrush" Color="#FF7FE9FF" po:Freeze="True" />

    <!-- Button backgrounds: subtle frosted look with improved depth -->
    <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0,0" EndPoint="0,1" po:Freeze="True">
        <GradientStop Color="#32FFFFFF" Offset="0.0" />
        <GradientStop Color="#18FFFFFF" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Text colour on buttons -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFFFF" po:Freeze="True" />

    <!-- Accent button gradient: vivid violet‑to‑cyan for a premium feel -->
    <LinearGradientBrush x:Key="AccentButtonBrush" StartPoint="0,0" EndPoint="1,1" po:Freeze="True">
        <GradientStop Color="#FF7C4DFF" Offset="0.0" />
        <GradientStop Color="#FF00E5FF" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Hover brush for buttons: brighter, cleaner glow -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#52FFFFFF" po:Freeze="True" />

    <!-- Glow colour used for neon effects -->
    <Color x:Key="GlowColor" po:Freeze="True">#FF7C4DFF</Color>
    <SolidColorBrush x:Key="GlowBrush" Color="{StaticResource GlowColor}" po:Freeze="True" />

    <!-- Neon drop shadow presets for the text and border glow -->
    <DropShadowEffect x:Key="NeonTextEffectDefault" Color="#FF7FE9FF" BlurRadius="9" ShadowDepth="0" Opacity="0.85" RenderingBias="Performance" po:Freeze="True" />
    <DropShadowEffect x:Key="NeonBorderEffectDefault" Color="#FF7C4DFF" BlurRadius="16" ShadowDepth="0" Opacity="0.55" RenderingBias="Performance" po:Freeze="True" />

    <!-- Reusable neon drop shadow references consumed by the UI -->
    <DropShadowEffect x:Key="NeonTextEffect" Color="#FF7FE9FF" BlurRadius="9" ShadowDepth="0" Opacity="0.85" RenderingBias="Performance" po:Freeze="True" />
    <DropShadowEffect x:Key="NeonBorderEffect" Color="#FF7C4DFF" BlurRadius="16" ShadowDepth="0" Opacity="0.55" RenderingBias="Performance" po:Freeze="True" />

    <DropShadowEffect x:Key="WindowShadowEffect" Color="#FF000000" BlurRadius="8" ShadowDepth="3" Direction="270" Opacity="0.35" RenderingBias="Performance" po:Freeze="True" />

</ResourceDictionary>
