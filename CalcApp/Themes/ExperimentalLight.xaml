<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Experimental Light Theme - Premium Glassmorphism -->
    
    <!-- Background - Soft Airy Gradient -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFF8FAFC" Offset="0.0"/> <!-- Slate 50 -->
        <GradientStop Color="#FFE0F2FE" Offset="1.0"/> <!-- Sky 100 -->
    </LinearGradientBrush>
    
    <!-- Display Background - Glassy Surface -->
    <LinearGradientBrush x:Key="BorderBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#CCFFFFFF" Offset="0.0"/>
        <GradientStop Color="#99FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display Text - Deep Indigo -->
    <SolidColorBrush x:Key="BorderForegroundBrush" Color="#FF312E81" /> <!-- Indigo 900 -->
    
    <!-- Button Background - Frosted Glass -->
    <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#CCFFFFFF" Offset="0.0"/>
        <GradientStop Color="#99F1F5F9" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Button Text - Dark Slate -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FF334155" /> <!-- Slate 700 -->
    
    <!-- Accent Button (Equals) - Vibrant Gradient -->
    <LinearGradientBrush x:Key="AccentButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF38BDF8" Offset="0.0"/> <!-- Sky 400 -->
        <GradientStop Color="#FF818CF8" Offset="1.0"/> <!-- Indigo 400 -->
    </LinearGradientBrush>
    
    <!-- Hover Effect Color -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#80FFFFFF" />
    
    <!-- Glow/Shadow Color -->
    <Color x:Key="GlowColor">#8038BDF8</Color>

    <!-- Experimental Button Style Override -->
    <Style TargetType="Button">
        <Setter Property="Margin" Value="6" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#80FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Glassy Pill Shape -->
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="24"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF94A3B8" Opacity="0.25" BlurRadius="12" ShadowDepth="4" Direction="270" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        
                        <!-- Inner Shine/Highlight -->
                        <Border x:Name="ShineBorder" CornerRadius="24" IsHitTestVisible="False" Opacity="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#80FFFFFF" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="0.6"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource ButtonHoverBrush}" />
                            <Setter TargetName="ShineBorder" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.9" />
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.96" ScaleY="0.96" CenterX="35" CenterY="35"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
