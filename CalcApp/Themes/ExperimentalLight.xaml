<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Experimental Light Theme - Fresh & Rounded -->
    
    <!-- Háttér - Soft Peach/Pink Gradient -->
    <!-- Háttér - White Gradient -->
    <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
        <GradientStop Color="#FFF8F9FA" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display háttér - Glassy White -->
    <LinearGradientBrush x:Key="BorderBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#CCFFFFFF" Offset="0.0"/>
        <GradientStop Color="#99FFFFFF" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Display szöveg - Deep Purple -->
    <SolidColorBrush x:Key="BorderForegroundBrush" Color="#FF4A148C" />
    
    <!-- Gomb háttér - Soft White/Pink -->
    <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
        <GradientStop Color="#FFFFF0F5" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Gomb szöveg - Black -->
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FF000000" />
    
    <!-- Egyenlőség gomb - Fresh Mint/Green -->
    <LinearGradientBrush x:Key="AccentButtonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF69F0AE" Offset="0.0"/>
        <GradientStop Color="#FF00E676" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Hover effect színek -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FFFFD1DC" />
    
    <!-- Border árnyék -->
    <Color x:Key="GlowColor">#FFEA80FC</Color>

    <!-- Experimental Button Style Override -->
    <Style TargetType="Button">
        <Setter Property="Margin" Value="6" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FFD1C4E9" Opacity="0.4" BlurRadius="12" ShadowDepth="4" Direction="270" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <!-- Fully Rounded / Pill Shape -->
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="25"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        <Border x:Name="HighlightBorder" CornerRadius="25" Background="White" Opacity="0" IsHitTestVisible="False" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.9" />
                            <Setter TargetName="HighlightBorder" Property="Opacity" Value="0.2" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8" />
                            <Setter TargetName="HighlightBorder" Property="Opacity" Value="0.3" />
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95" CenterX="35" CenterY="35"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
