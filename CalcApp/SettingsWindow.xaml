<Window x:Class="CalcApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beallitasok" Width="420" Height="240"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border CornerRadius="20" BorderBrush="{DynamicResource ButtonBorderBrush}"
                BorderThickness="1" Padding="16"
                Background="{DynamicResource BorderBackgroundBrush}"
                UseLayoutRounding="True" SnapsToDevicePixels="True">
            <StackPanel>
                <TextBlock Text="Naplozas" FontSize="16" FontWeight="SemiBold"
                           Foreground="{DynamicResource BorderForegroundBrush}"
                           Margin="0,0,0,12" />

                <CheckBox Content="Serilog naplozas engedelyezese"
                          IsChecked="{Binding IsSerilogEnabled, Mode=TwoWay}"
                          Foreground="{DynamicResource BorderForegroundBrush}"
                          FontSize="14"
                          Margin="0,0,0,8" />

                <TextBlock Text="Ha kikapcsolod, a naplofajlok nem keszulnek el."
                           Foreground="{DynamicResource BorderForegroundBrush}"
                           Opacity="0.7" FontSize="12" />
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Bezaras" Width="110" Click="Close_Click" IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
